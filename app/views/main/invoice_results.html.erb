<div class="invoice_printout">
  <h2>Customer Information</h2>
<p>Name: <%= @customer.name %></p>
<p>Address: <%= @customer.address %></p>
<p>City: <%= @customer.city %>, <%= @customer.province.name %>  <%= @customer.postal_code %></p>
</div>




<div class="invoice_printout">
<p>Order ID: <%= @order.id %>  </p>
<table class="table">
  <tr>
    <th>Product</th>
    <th>Quantity</th>
    <th>Price</th>
    <th>Total</th>
  </tr>

  
  <% @order.invoice_items.each do |item| %>
  <tr>
    <th><%= item.product.name %></th>
    <th><%= item.quantity %></th>
    <th><%= item.taxes %></th>
    <th><%= item.total %></th>
  </tr>
<% end %>
 
</table>
</div >

